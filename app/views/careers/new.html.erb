<% content_for :title, "New career" %>

<%= render "shared/header" %>

<div class="bg-white px-6 py-6 sm:py-2 lg:px-8 dark:bg-gray-900">
  <div class="mx-auto max-w-[900px] w-full overflow-hidden bg-white shadow-sm rounded-xl dark:bg-gray-800/50 dark:shadow-none dark:inset-ring dark:inset-ring-white/10">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base/7 font-semibold text-gray-900 dark:text-white">New career</h3>
      <p class="mt-1 max-w-2xl text-sm/6 text-gray-500 dark:text-gray-300">Create a new role.</p>
    </div>

    <div class="border-t border-gray-100 dark:border-white/5">
      <dl class="divide-y divide-gray-100 dark:divide-white/5">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900 dark:text-gray-100">New role</dt>
          <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0 dark:text-gray-300">
            <%= render "form", career: @career %>
          </dd>
        </div>
      </dl>
    </div>

    <div class="mt-6 p-6 text-center flex items-center justify-end gap-x-6">
      <%= link_to "Back", careers_path, class: "cursor-pointer mt-5 w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
    </div>
  </div>
</div>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New career</h1>

  <%= render "form", career: @career %>

  <%= link_to "Back to careers", careers_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
