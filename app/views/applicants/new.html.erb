<% content_for :title, "New applicant" %>

<%= form_with(model: [@career, @applicant], local: true, class: "contents") do |form| %>
  <div class="bg-white py-6 dark:bg-gray-900">
    <% if @applicant.errors.any? %>
      <div class="mx-auto max-w-4xl rounded-md bg-red-50 p-4 dark:bg-red-500/15 dark:outline dark:outline-red-500/25 mt-6">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
              <%= pluralize(@applicant.errors.count, "error") %> found in your submission
            </h3>

            <div class="mt-2 text-sm text-red-700 dark:text-red-200/80">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% @applicant.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
  <% end %>

  <div class="bg-white py-6 dark:bg-gray-900">
    <div class="mx-auto max-w-4xl text-center">
      <%= link_to root_url do %>
        <svg enable-background="new 0 0 128 128" height="70px" id="Layer_1" version="1.1" viewBox="0 0 128 128" width="70px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <path fill="#F44336" d="M112.005,50.192h-96c-0.778,0-1.485-0.451-1.813-1.157s-0.217-1.538,0.284-2.132L37.5,19.595  c0.38-0.451,0.939-0.711,1.529-0.711h49.957c0.59,0,1.149,0.26,1.529,0.711l23.019,27.308c0.501,0.595,0.612,1.427,0.284,2.132  S112.783,50.192,112.005,50.192z M20.308,46.192h87.396L88.057,22.884H39.959L20.308,46.192z"/>
          <polygon fill="#F44336" points="64.005,108.299 14.475,49.48 17.535,46.904 64.005,102.088 110.475,46.904 113.535,49.48 "/>
          <path fill="#F44336" d="M64.005,107.193L64.005,107.193c-0.849,0-1.604-0.535-1.886-1.335L42.023,48.857c-0.221-0.625-0.117-1.317,0.275-1.851  l20.096-27.308c0.752-1.024,2.467-1.024,3.221,0l20.1,27.308c0.393,0.533,0.496,1.226,0.275,1.851l-20.1,57.001  C65.609,106.658,64.854,107.193,64.005,107.193z M46.147,48.525l17.857,50.654l17.861-50.654L64.005,24.258L46.147,48.525z"/>
          <rect fill="#F44336" height="4" transform="matrix(0.1759 0.9844 -0.9844 0.1759 68.1737 -12.3602)" width="27.74" x="27.599" y="32.538"/>
          <rect fill="#F44336" height="27.741" transform="matrix(0.9844 0.176 -0.176 0.9844 7.431 -14.695)" width="4" x="84.545" y="20.668"/>
        </svg>
      <% end %>
    </div>
  </div>

  <div class="bg-white px-6 py-24 sm:py-20 lg:px-8 dark:bg-gray-900">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl dark:text-white"><%= @career.title %></h2>
      <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 dark:text-gray-400">
        <%= @career.location %> &middot; <%= @career.employment_type %> &middot; <%= @career.salary_range %>
      </p>
    </div>
  </div>

  <div class="bg-white px-6 py-24 sm:py-2 lg:px-8 dark:bg-gray-900">
    <div class="mx-auto max-w-[900px] w-full overflow-hidden bg-white shadow-sm sm:rounded-lg p-7 dark:bg-gray-800/50 dark:shadow-none dark:inset-ring dark:inset-ring-white/10">
      <form>
        <div class="space-y-12">
          <div class="border-b border-gray-900/10 pb-12 dark:border-white/10">
            <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">Personal Information</h2>
            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">Please provide some information about you.</p>

            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <label for="first-name" class="block text-sm/6 font-medium text-gray-900 dark:text-white">
                  <%= form.label :name, "First name*" %>
                </label>
                <div class="mt-2">
                  <%= form.text_field :name,
                    id: "first-name",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>


              <div class="sm:col-span-3">
                <label for="surname" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :surname, "Last name*" %></label>
                <div class="mt-2">
                  <%= form.text_field :surname,
                    id: "surname",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>

              <div class="sm:col-span-3">
                <label for="email" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :surname, "Email address*" %></label>
                <div class="mt-2">
                  <%= form.email_field :email,
                    id: "email",
                    autocomplete: "email",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>

              <div class="sm:col-span-3">
                <label for="phone" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :phone, "Phone" %></label>
                <div class="mt-2">
                  <%= form.telephone_field :phone,
                    id: "phone",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>

              <div class="sm:col-span-3">
                <label for="country-name" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :country, "Country*" %></label>
                <div class="mt-2 grid grid-cols-1 relative">
                  <%= form.select :country,
                    [["United States", "United States"], ["Canada", "Canada"], ["Mexico", "Mexico"]],
                    { prompt: "Select a country" },
                    id: "country-name",
                    autocomplete: "country-name",
                    class: "col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pr-8 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:*:bg-gray-800 dark:focus:outline-indigo-500" %>

                  <svg viewBox="0 0 16 16" fill="currentColor" data-slot="icon" aria-hidden="true"
                    class="pointer-events-none absolute right-2 top-1/2 -translate-y-1/2 size-5 text-gray-500 sm:size-4 dark:text-gray-400">
                    <path d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
                  </svg>
                </div>
              </div>

              <div class="sm:col-span-3">
                <label for="city-name" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :city, "City*" %></label>
                <div class="mt-2">
                  <%= form.text_field :city,
                    id: "city-name",
                    autocomplete: "city-name",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>
            </div>
          </div>

          <div class="border-b border-gray-900/10 pb-12 dark:border-white/10">
            <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">Application Profile</h2>
            <p class="mt-1 text-sm/6 text-gray-600 dark:text-gray-400">Please provide some information about your professional experience.</p>

            <div class="mt-10 col-span-full">
              <label for="cover-photo" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :resume, "Upload resume*" %></label>
              <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10 dark:border-white/25">
                <div class="text-center">
                  <svg viewBox="0 0 24 24" fill="currentColor" data-slot="icon" aria-hidden="true" class="mx-auto size-12 text-gray-300 dark:text-gray-600">
                    <path d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z" clip-rule="evenodd" fill-rule="evenodd" />
                  </svg>
                  <div class="mt-4 flex text-sm/6 text-gray-600 dark:text-gray-400">
                    <label for="file-upload" class="relative cursor-pointer rounded-md bg-transparent font-semibold text-indigo-600 focus-within:outline-2 focus-within:outline-offset-2 focus-within:outline-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:focus-within:outline-indigo-500 dark:hover:text-indigo-300">
                      <span>Upload a file</span>
                      <input id="file-upload" type="file" name="file-upload" class="sr-only" />
                    </label>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs/5 text-gray-600 dark:text-gray-400">PNG, JPG, GIF up to 10MB</p>
                </div>
              </div>
            </div>

            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <label for="expected-salary" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :expected_salary %></label>
                <div class="mt-2">
                  <%= form.text_field :expected_salary,
                    id: "expected-salary",
                    placeholder: "Annual salary in US dollars or euros",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>

              <div class="sm:col-span-3">
                <label for="availability" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :availability %></label>
                <div class="mt-2">
                  <%= form.text_field :availability,
                    id: "availability",
                    placeholder: "Your notice period",
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <label for="linkedin_url" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :linkedin_url, "Your LinkedIn" %></label>
                <div class="mt-2">
                  <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500">
                    <%= form.url_field :linkedin_url,
                      id: "linkedin_url",
                      placeholder: "https://linkedin.com/in/username",
                      class: "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 dark:bg-transparent dark:text-white dark:placeholder:text-gray-500" %>
                  </div>
                </div>
              </div>

              <div class="sm:col-span-4">
                <label for="github_url" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :github_url, "Your GitHub" %></label>
                <div class="mt-2">
                  <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 dark:bg-white/5 dark:outline-white/10 dark:focus-within:outline-indigo-500">
                    <%= form.url_field :github_url,
                      id: "github_url",
                      placeholder: "https://github.com/username",
                      class: "block min-w-0 grow bg-white py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 dark:bg-transparent dark:text-white dark:placeholder:text-gray-500" %>
                  </div>
                </div>
              </div>

              <div class="col-span-full">
                <label for="cover_letter" class="block text-sm/6 font-medium text-gray-900 dark:text-white"><%= form.label :cover_letter %></label>
                <div class="mt-2">
                  <%= form.text_area :cover_letter,
                    id: "cover_letter",
                    rows: 5,
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500" %>
                </div>
                <p class="mt-3 text-sm/6 text-gray-600 dark:text-gray-400">Write a few sentences about yourself.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
          <%= form.submit "Submit", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:focus-visible:outline-indigo-500" %>
        </div>
      </form>
    </div>
  </div>
<% end %>
